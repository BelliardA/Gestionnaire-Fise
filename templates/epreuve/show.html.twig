{% extends 'base.html.twig' %}

{% block title %}Epreuve{% endblock %}

{% block body %}
    <h1>Epreuve</h1>

    <p>{{ epreuve.degre }}</p>
    <p>{{ epreuve.date ? epreuve.date|date('Y-m-d H:i:s') : '' }}</p>
    <p>{{ epreuve.sport }}</p>
    {% for participe in epreuve.participes %}
        <p>{{ participe.sportif.nom}} {{ participe.sportif.prenom}} </p>
    {% endfor %}
    
    
    <a href="{{ path('app_epreuve_index') }}">back to list</a>

    <a href="{{ path('app_epreuve_edit', {'id': epreuve.id}) }}">edit</a>

    {{ include('epreuve/_delete_form.html.twig') }}
{% endblock %}
